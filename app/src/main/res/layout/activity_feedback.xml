<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ActivityFeedback">



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_below="@+id/layoutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="5dp"
                    android:elevation="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:id="@+id/lout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_annHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLength="15"
                            android:layout_marginHorizontal="15dp"
                            android:minHeight="55dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:hint="Add Tittle"></EditText>

                        <EditText
                            android:id="@+id/edit_annBody"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:minHeight="95dp"
                            android:paddingTop="7sp"
                            android:paddingBottom="10dp"
                            android:paddingStart="15dp"
                            android:gravity="top"
                            android:paddingEnd="7dp"
                            android:layout_marginTop="5dp"
                            android:hint="Add Feedback"></EditText>

                        <Button
                            android:id="@+id/btn_announcement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:elevation="16dp"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="20dp"
                            android:layout_gravity="right"
                            android:text="Send"></Button>




                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earlier"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold">
                </TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_Feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>